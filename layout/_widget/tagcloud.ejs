<% if (site.tags.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('tagcloud') %></h3>
    <div class="widget tagcloud">
      <%- tagcloud(site.tags, {
        min_font: 13,
        max_font: 23,
        amount: 65,
        orderby: 'count',
        color: true,
        start_color: '#EE9A49',
        end_color: '#EE0000'
      }) %>
    </div>
  </div>
<% } %>